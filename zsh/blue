jambox="00:21:3C:9C:F0:53"
bose="60:AB:D2:DE:4B:45"
sony="14:3F:A6:DB:16:6A"
devices=(sony jambox)

function blconnect()
{
  mac=$(eval "echo \$$1")

  bluetoothctl << EOF
    power on

    connect $mac
EOF
}

function bldisconnect()
{
  mac=$(eval "echo \$$1")

  bluetoothctl << EOF
    disconnect $mac
EOF
}

function blreconnect()
{
  bldisconnect $1
  blconnect $1
}

function _devices_completion ()
{
  reply=($devices)
}

mic-on () {
  mac=$(eval "echo \$$1") 
  pactl set-card-profile bluez_card.$(echo $mac | sed -e 's/:/_/g') headset-head-unit-msbc
}

mic-off () {
  mac=$(eval "echo \$$1") 
  pactl set-card-profile bluez_card.$(echo $mac | sed -e 's/:/_/g') a2dp-sink-sbc
}

compctl -K _devices_completion blconnect
compctl -K _devices_completion bldisconnect
compctl -K _devices_completion blreconnect
compctl -K _devices_completion mic-on
compctl -K _devices_completion mic-off


# vim:filetype=zsh
