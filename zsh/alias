# ls/df/du human readable

if [ $SYSTEM = "Darwin" ]; then
	alias ls='ls -G -h'
else
	alias ls='ls --color=auto -h'
fi

alias ll='ls -l'
alias lla='ls -la'
alias la='ls -a'

alias diff='colordiff'
#alias vim="vim -O2"
alias df="df -h"
alias gitk="gitk --all"
alias ssh='ssh -o GSSAPIAuthentication=no'

alias grep='grep -in --color=always'

alias cp='rsync -a --progress'


# vim:filetype=zsh
